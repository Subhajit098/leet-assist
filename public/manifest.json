{
  "manifest_version": 3,
  "name": "Leet Assist",
  "version": "1.0.0",
  "description": "Helps to solve Data Structure and Algorithm Problems on Leetcode Website. Currently available only for Leetcode.",
  "permissions": ["scripting", "tabs", "storage","sidePanel"],
  "host_permissions": ["https://leetcode.com/problems/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Side Panel"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "type" : "module"
    }
  ]
}
